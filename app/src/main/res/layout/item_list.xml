<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <CheckBox
        android:id="@+id/cb_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <!-- android:focusable="false"  解决焦点抢占的两种方式-->
    <TextView
        android:id="@+id/tv_title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="新技能"
        android:textColor="#444"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_desc_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_item"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:minLines="1"
        android:text="描述"
        android:textColor="#898989" />

    <TextView
        android:id="@+id/tv_time_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc_item"
        android:layout_marginTop="10dp"
        android:text="2016-06-04"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_phone_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_time_item"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_desc_item"
        android:background="#2ed667"
        android:drawableLeft="@android:drawable/stat_sys_phone_call"
        android:drawablePadding="5dp"
        android:padding="3dp"
        android:text="10086"
        android:textColor="#fff"
        android:textSize="12sp" />
</RelativeLayout>